    <form class="form">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address : <%= user.email %> </label>
          <input type="email" class="form-control" name="email" value=""  id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Username : <%= user.username %> </label>
          <input type="text" class="form-control" name="username" value="" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">phone  : <%= user.phone %></label>
